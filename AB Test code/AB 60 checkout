<div id ="billingbox" class="billingbox">
<input type="checkbox" id="myCheck" checked onclick="showBilling()">
<label for="myCheck">Factuuradres is hetzelfde als leveradres</label> 
</div>

<script>
function showBilling() {
  var checkBox = document.getElementById("myCheck");
  var text = document.getElementById("billing");
  var checkBox2 = document.getElementById("billingbox");
  if (checkBox.checked == false){
    text.style.display = "block";
    checkBox2.style.display = "none";
  } else {
     text.style.display = "none";
  }
}
</script>